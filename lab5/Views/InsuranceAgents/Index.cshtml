@model IEnumerable<lab5.Models.InsuranceAgent>

@{
    ViewData["Title"] = "Insurace Agents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Insurace Agents</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionPercent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th></th>
        </tr>
        <tr>
            <form method="post">
                <th>
                <input type="text" name="Name" value='@ViewData["InsuranceAgentName"]' />
                </th>
                <th>
                <input type="text" name="Surname" value='@ViewData["InsuranceAgentSurname"]' />
                </th>
                <th>
                <input type="text" name="MiddleName" value='@ViewData["InsuranceAgentMiddleName"]' />
                </th>
                <th>
                <input type="number" name="Salary" value='@ViewData["InsuranceAgentSalary"]' />
                </th>
                <th>
                <input type="number" name="TransactionPercent" value='@ViewData["InsuranceAgentTransactionPercent"]' />
                </th>
                <th>
                <input type="text" name="Type" value='@ViewData["InsuranceAgentType"]' />
                </th>
                <th>
                <input type="text" name="Responsibilities" value='@ViewData["InsuranceAgentResponsibilities"]' />
                </th>
                <th><input type="submit" class="btn btn-primary" value="Confirm" /></th>
            </form>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgentType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract.Responsibilities)<br>
                @item.Contract.StartDeadline.ToShortDateString()<br>
                @item.Contract.EndDeadline.ToShortDateString()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="text-center">
    @if ((int)ViewData["Page"] > 1) {
        @Html.ActionLink("Предыдущая страница", "Index", new { page = (int)ViewData["Page"] - 1, pageSize = (int)ViewData["PageSize"] })
    }

    @if ((int)ViewData["Page"] < (int)ViewData["ItemsCount"] / (int)ViewData["PageSize"]) {
        @Html.ActionLink("Следующая страница", "Index", new { page = (int)ViewData["Page"] + 1, pageSize = (int)ViewData["PageSize"] })
    }
</div>